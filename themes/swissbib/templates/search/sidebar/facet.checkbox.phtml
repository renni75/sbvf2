<? if (count($checkboxFilters) > 0): ?>
	<div class="facet" id="facet_checkbox">
		<h5 class="toggler persist expanded" id="facet_toggler_checkbox">Eingrenzen</h5>
		<ul class="facet_toggler_checkbox">
			<? foreach ($checkboxFilters as $current): ?>
				<li>
					<?php
					$idCurCheckbox = $this->escapeHtml(str_replace(' ', '', $current['desc']));
					$hrefCurCheckbox = $current['selected'] ? $results->getUrlQuery()->removeFilter($current['filter']) : $results->getUrlQuery()->addFilter($current['filter']);
					?>
					<input type="checkbox" name="filter[]"
						   value="<?= $this->escapeHtml($current['filter']) ?>" <?= $current['selected'] ? 'checked="checked"' : '' ?>
						   id="<?= $idCurCheckbox ?>" onclick="document.location.href='<?= $hrefCurCheckbox ?>';"/>
					<label for="<?= $idCurCheckbox ?>"><?= $this->transEsc($current['desc']) ?></label>
				</li>
			<? endforeach; ?>
		</ul>
	</div>
<? endif; ?>